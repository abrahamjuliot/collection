- list() // a function that creates a list, a list is a collection of items in Python
- a in list('hello') // false
- e in lest('hello') // true
- str.split() // splits a string into a list, items being separted by the strings' whitespaces
- str.join() // joins a list into a string // '_'.join(sentence_list) // everything we join has to be a string
- shopping_list = [ ] // or = list( ) // either works 
 while True:
 new_item = input("> ")
 if new_item == 'DONE':
 break
 shopping_list.append(new_item) // adds an item
 print("Added! list now has {} items.".format(len(shopping_list)))
 continue
print("Here's your list:")
for item in shopping_list: // for in loop
 print(item)
- def // keyword to define a function
- def say_hello():
 print('Hello')
say_hello() // Hello
- def add_to_two(num):
 print(num + 2)
add_to_two(4) // 6
- def square(num)
 return num * num
square(5) // 25
five_squared = squared(5) // returns and assigns 25
- def show_help():
 print("What should we pickup at the store?")
 print("Enter DONE to stop. Enter HELP for this help.")
def add_to_list(item):
 shopping_list.append(item)
 print("Added! List now has {} item(s).".format(len(shopping_list)))
def show_list():
 print("Here's your list:")
 for item in shopping_list:
 print(item)
show_help()
while True:
 new_item = input("> ")
 if new_item == 'DONE':
 break
 elif new_item == 'HELP':
 show_help()
 continue
 add_to_list(new_item)
 continue
show_list()
- import random // imports the random library
